<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/famous_restaurant_layout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_mainStore_image_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_mainStore_image_2"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginBottom="2dp"
                android:background="#234323"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/item_mainStore_image_3"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginTop="2dp"
                android:background="#456213"
                android:scaleType="fitXY" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/famous_restaurant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="가게 타이틀"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/famous_restaurant_layout" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/famous_restaurant_title" />

    <TextView
        android:id="@+id/item_mainStore_storeStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="별점"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/item_mainStore_reviewCount"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/famous_restaurant_title" />

    <TextView
        android:id="@+id/item_mainStore_reviewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="리뷰수"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_mainStore_storeStar"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_mainStore_storeStar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" · "
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_mainStore_reviewCount"
        app:layout_constraintEnd_toStartOf="@+id/item_mainStore_distance"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_mainStore_reviewCount" />

    <TextView
        android:id="@+id/item_mainStore_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거리"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" · "
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_mainStore_distance"
        app:layout_constraintEnd_toStartOf="@+id/item_franchise_deliveryFee"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_mainStore_distance" />

    <TextView
        android:id="@+id/item_mainStore_deliveryFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달비"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/delivery_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="배달시간"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/famous_restaurant_layout" />

    <ImageView
        android:id="@+id/coupon"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_coupon"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_mainStore_storeStar" />

    <ImageView
        android:id="@+id/is_cheetah"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_cheetah"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/famous_restaurant_title"
        app:layout_constraintStart_toEndOf="@+id/famous_restaurant_title"
        app:layout_constraintTop_toTopOf="@+id/famous_restaurant_title" />

    <ImageView
        android:id="@+id/is_new_store"
        android:layout_width="34dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_new_store"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/famous_restaurant_title"
        app:layout_constraintStart_toEndOf="@+id/famous_restaurant_title"
        app:layout_constraintTop_toTopOf="@+id/famous_restaurant_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>