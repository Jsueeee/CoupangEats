<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_store_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="가게 이름"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_store_photo"
        app:layout_constraintTop_toTopOf="@+id/item_store_photo" />

    <ImageView
        android:id="@+id/is_cheetah"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_cheetah"
        app:layout_constraintBottom_toBottomOf="@+id/store_name"
        app:layout_constraintStart_toEndOf="@+id/item_store_name"
        app:layout_constraintTop_toTopOf="@+id/item_store_name" />

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="@+id/item_store_name"
        app:layout_constraintTop_toBottomOf="@+id/item_store_name" />

    <TextView
        android:id="@+id/item_storeStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="별점"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_star"
        app:layout_constraintStart_toEndOf="@+id/img_star"
        app:layout_constraintTop_toTopOf="@+id/img_star" />

    <TextView
        android:id="@+id/item_reviewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰수"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@+id/item_storeStar"
        app:layout_constraintTop_toTopOf="@+id/item_storeStar" />

    <TextView
        android:id="@+id/item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거리"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/img_star"
        app:layout_constraintTop_toBottomOf="@+id/img_star" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" · "
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/item_distance"
        app:layout_constraintTop_toTopOf="@+id/item_distance" />

    <TextView
        android:id="@+id/item_deliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/item_distance" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" · "
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/item_deliveryTime"
        app:layout_constraintTop_toTopOf="@+id/item_deliveryTime" />

    <TextView
        android:id="@+id/item_deliveryFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달비"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <ImageView
        android:id="@+id/coupon"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_coupon"
        app:layout_constraintStart_toStartOf="@+id/item_distance"
        app:layout_constraintTop_toBottomOf="@+id/item_distance" />

</androidx.constraintlayout.widget.ConstraintLayout>